CREATE TABLE RESIDENCIA(
	CODIGO INTEGER PRIMARY KEY,
	RUA VARCHAR(50),
	NUMERO INTEGER,
	BAIRRO VARCHAR(50),
	CEP VARCHAR(8),
	EMAIL VARCHAR(50)
);

CREATE TABLE QUARTO(
	CODIGO INTEGER PRIMARY KEY,
	VALORDIARIA NUMERIC(10,2),
	CAPACIDADE INTEGER,
	ARCONDICIONADO BOOLEAN,
	HIDROMASSAGEM BOOLEAN,
	FK_RESIDENCIA INTEGER REFERENCES RESIDENCIA(CODIGO)
);

CREATE TABLE HOSPEDE(
	CODIGO INTEGER PRIMARY KEY,
	NOME VARCHAR(50),
	CPF VARCHAR(11),
	ENDERECO VARCHAR(50),
	CELULAR VARCHAR(20),
	TELEFONE VARCHAR(20),
	EMAIL VARCHAR(20)
);

CREATE TABLE ALUGUEL(
	CODIGO INTEGER PRIMARY KEY,
	ENTRADADIA DATE,
	ENTRADAHORA TIME,
	SAIDADIA DATE,
	SAIDAHORA TIME,
	FK_HOSPEDE INTEGER REFERENCES HOSPEDE(CODIGO),
	FK_QUARTO INTEGER REFERENCES QUARTO(CODIGO)
);